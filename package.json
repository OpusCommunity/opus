    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@tauri-apps/api": ">=2.0.0-beta.0",
    "@tauri-apps/plugin-autostart": "^2.0.0-beta.2",
    "@tauri-apps/plugin-log": "^2.0.0-beta.3",
    "primeng": "^17.14.1",
