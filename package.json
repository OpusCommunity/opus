    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint",
    "fix": "eslint --cache --fix src/ && prettier --write src/",
    "stylelint": "stylelint 'src/**/*.scss'"
